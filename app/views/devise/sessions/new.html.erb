<div class="container-fluid h-100 p-5">
  <div class="row justify-content-center align-items-center h-100">
    <div class="col col-sm-6 col-md-6 col-lg-4 col-xl-3">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, class: 'form-control form-control-lg', autocomplete: "email", placeholder: 'Email' %>
        </div>

        <div class="form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, class: 'form-control form-control-lg', autocomplete: "current-password", placeholder: 'Password' %>
        </div>

        <div class="form-group">
          <%= f.submit "Log in", class: 'btn btn-info btn-lg btn-block' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>